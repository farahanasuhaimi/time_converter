{
    "manifest_version": 3,
    "name": "Time Converter",
    "version": "0.4",
    "description": "Convert international timing to your local time.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "permissions": [
      "activeTab"
    ],
    "web_accessible_resources": [
        {
          "resources": ["luxon.min.js"],
          "matches": ["<all_urls>"]
        }
      ]
  }
  